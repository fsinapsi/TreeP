(defnet test-avcodec (func)
        (deflocal i)

        (lmatch remove func "av-")
        (for i in (test-avcodec-table) do
                until (= <i 0> func) )
        (= <i 0> func)
        (exprseq-ext <i 1> <i 2> (+ "  if(trp_av_" (dash->underscore func) "(") "))")
        (flag-true "avcodec") )

(defun test-avcodec-table ()
        [ [ "sws-scale"                 3 3 ]
          [ "read-frame"                3 3 ]
          [ "set-video-frame-rate"      1 2 ]
          [ "set-dar"                   1 2 ]
          [ "set-buf-size"              2 2 ]
          [ "set-ignore-invalid-data"   2 2 ]
          [ "set-debug"                 2 2 ]
          [ "set-filter-rows"           1 2 ]
          [ "set-filter"                1 2 ]
          [ "set-gamma"                 1 2 ]
          [ "set-contrast"              1 2 ]
          [ "set-hue"                   1 2 ]
          [ "set-temperature"           1 2 ]
          [ "set-hflip"                 2 2 ]
          [ "set-vflip"                 2 2 ]
        ] )

