(defnet test-lept (func)
        (deflocal i)

        (lmatch remove func "lept-")
        (for i in (test-lept-table) do
                until (= <i 0> func) )
        (= <i 0> func)
        (exprseq-ext <i 1> <i 2> (+ "  if(trp_lept_" (dash->underscore func) "(") "))")
        (flag-true "lept") )

(defun test-lept-table ()
        [ [ "pix-dither-to-binary"      1 1 ]
          [ "pix-unsharp-masking"       3 3 ]
          [ "pix-close-gray"            2 3 ]
          [ "pix-blockconv"             2 3 ]
          [ "pix-subtract"              2 2 ]
          [ "pix-abs-difference"        2 2 ]
          [ "pix-blend"                 5 6 ]
        ] )

